#!/usr/bin/env bash
# b5 Taskfile, see https://git.team23.de/build/b5 for details

run:poetry() {
  (
    cd .. && \
    poetry "$@"
  )
}

task:install() {
  run:poetry install
}

task:update() {
  run:poetry install
  run:poetry run python manage.py migrate
}

task:poetry() {
  run:poetry "$@"
}

task:run() {
  run:poetry run uvicorn fastapi_django_test.main:app --host 0.0.0.0 --port 8000 --reload
}

task:test() {
  run:poetry run pytest
}

task:ruff() {
  run:poetry run ruff check fastapi_django_test "$@"
}

task:mypy() {
  run:poetry run mypy fastapi_django_test "$@"
}

task:lint() {
  task:ruff
  task:mypy
}

task:manage.py() {
  run:poetry run python manage.py "$@"
}
